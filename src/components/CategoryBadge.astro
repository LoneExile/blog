---
import Camera from "@icons/camera.astro";
import Code from "@icons/code.astro";

interface Props {
  categorys: string[] | undefined;
}
const { categorys } = Astro.props;

let category = categorys?.pop() || "technology";
category = category.charAt(0).toUpperCase() + category.slice(1);
---

<span
  class="inline-flex items-center rounded bg-primary-100 px-2.5 py-0.5 text-xs font-medium text-primary-800 dark:bg-primary-200 dark:text-primary-800"
>
  <Code color="fill-current" size="mr-1 w-3 h-3" />
  {category}
</span>
