---
import Github from "@icons/github.astro";
import Logo from "@icons/logo.astro";
---

<footer class="footer items-center p-4 bg-neutral text-neutral-content">
  <div class="items-center grid-flow-col">
    <Logo color="stroke-base-content" size="w-10 h-10" />
    <p>Copyright Â© <span id="copyright"></span> - All right reserved</p>
  </div>
  <div class="grid-flow-col gap-4 md:place-self-center md:justify-self-end">
    <Github color="fill-current" size="w-6 h-6 cursor-pointer" />
  </div>
</footer>

<script>
  const date = new Date();
  const year = date.getFullYear();
  const copyrightElement = document.querySelector("#copyright");
  if (copyrightElement) {
    copyrightElement.innerHTML = year.toString();
  } else {
    console.error('Element with ID "copyright" not found.');
  }

  const github = document.querySelector("#github");
  if (github) {
    github.addEventListener("click", () => {
      window.open("https://github.com/LoneExile/blog", "_blank");
    });
  }
</script>
