---
import cat from "@assets/vintage-cat-rawpixel.com-jeanbernard.png";
import { Image } from "astro:assets";

interface Props {
  data: SiteData;
}

const { data } = Astro.props;
---

<section class="bg-white dark:bg-gray-900">
  <div
    class="mx-auto grid max-w-screen-xl px-4 py-1 lg:grid-cols-12 lg:gap-8 lg:py-1 xl:gap-0"
  >
    <div class="mr-auto place-self-center lg:col-span-7">
      <h1
        class="mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight dark:text-white md:text-5xl xl:text-6xl"
      >
        {data.home.hero.title}
      </h1>
      <p
        class="mb-6 max-w-2xl whitespace-pre-line font-light text-gray-500 dark:text-gray-400 md:text-lg lg:mb-8 lg:text-xl"
      >
        {data.home.hero.description}
      </p>
    </div>
    <div class="hidden lg:col-span-5 lg:mt-0 lg:flex">
      <Image
        class="dark:invert"
        width="493.34"
        height="493.34"
        src={cat}
        alt="vintage-cat-rawpixel.com-jeanbernard"
      />
    </div>
  </div>
</section>
