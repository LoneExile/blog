---
import MainLayout from "@layouts/MainLayout.astro";
import NotFound from "@components/NotFound.astro";
import LoneExile from "@assets/LoneExile.png";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  language: string;
}
let { language } = Astro.props;
if (!language) {
  language = "en";
}

const currentPath = getRelativeLocaleUrl(language, "");
const title = "Page Not Found";
---

<MainLayout description="Error page not found" {currentPath} {language} {title}>
  <NotFound image={LoneExile} />
</MainLayout>
